@model IEnumerable<IbhayiPharmacy.Models.Doctor>
@{
    ViewData["Title"] = "Manage Doctors";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<div class="container mt-4">
    <div class="card p-3">
        <h5 class="title-underline">Existing Doctors</h5>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <table class="table table-hover table-borderless">
                    <thead class="table-light" style="color: #2c3e50;">
                        <tr>
                            <th>Name</th>
                            <th>Practice Number</th>
                            <th>Contact</th>
                            <th>Email</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var doc in Model)
                        {
                            <tr>
                                <td>@doc.Name @doc.Surname</td>
                                <td>@doc.HealthCouncilRegistrationNumber</td>
                                <td>@doc.ContactNumber</td>
                                <td>@doc.Email</td>
                                <td>
                                    <a asp-action="EditDoctor" asp-route-id="@doc.DoctorID" class="btn btn-sm btn-warning me-2">Edit</a>
                                    <a asp-action="DeleteDoctor" asp-route-id="@doc.DoctorID" class="btn btn-sm btn-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted">No doctors available.</p>
            }
        </div>
    </div>
</div>

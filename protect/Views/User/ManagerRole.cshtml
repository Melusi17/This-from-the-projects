@model RolesViewModel
@{
    var title = "Manage User Role";
}
<form method="post">
    <input asp-for="@Model.User.Id" hidden />
    <div class="card shadow border-0 mt-4">
        <div class="card-header w-100" style="cursor:pointer; background-color: #00aaff; bg-gradient; ml-0; py-3;">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2 pb-4">@title</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6"></div>
        </div>
        <div class="border p-2 rounded">

            <div class="form-group">
                <label class="col-12">User Email</label>
                <div class="col-md-12">
                    <input asp-for="User.Email" disabled class="form-control" />
                </div>
            </div>
           
            <div class="form-group mt-3 p-2 border rounded">
                <span>Roles Assignment</span>
                @for (int i = 0; i < Model.RoleList.Count; i++)
                {
                    <div class="m-2 form-check">
                        <input asp-for="@Model.RoleList[i].RoleName" hidden />
                        <input asp-for="@Model.RoleList[i].IsSelected" class="form-check-input" />
                        <label class="col-form-label" asp-for="@Model.RoleList[i].IsSelected">
                            @Model.RoleList[i].RoleName
                        </label>

                    </div>
                }
            </div>
            <div class="form-group pt-3 row">
                <div class="col-md-6">
                    <a class="btn btn-secondary w-100" asp-action="Index">Back to List</a>
                </div>
                <div class="col-md-6">
                    <input type="submit" class="btn btn-primary form-control w-100" value="Update" />
                </div>
            </div>
        </div>

    </div>
   
</form>
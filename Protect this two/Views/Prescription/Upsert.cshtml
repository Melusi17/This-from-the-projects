@model IbhayiPharmacy.Models.Prescription
@{
    ViewData["Title"] = "Upsert Prescription";
}

<div class="container py-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">@(Model.PrescriptionID == 0 ? "Create" : "Edit") Prescription</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Upsert" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="PrescriptionID" />
                        <input type="hidden" asp-for="ApplicationUserId" />

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        @* <div class="form-group mb-3">
                            <label asp-for="ApplicationUserId" class="control-label">User</label>
                            <select asp-for="ApplicationUserId" class="form-control" asp-items="ViewBag.ApplicationUserId">
                                <option value="">-- Select User --</option>
                            </select>
                            <span asp-validation-for="ApplicationUserId" class="text-danger"></span>
                        </div> 
 *@
                        <div class="form-group mb-3">
                            <label asp-for="DateIssued" class="control-label">Date Issued</label>
                            <input asp-for="DateIssued" class="form-control" type="datetime-local" />
                            <span asp-validation-for="DateIssued" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label for="Script" class="control-label">Prescription File (PDF only)</label>
                            <input asp-for="Script" type="file" name="file" class="form-control" accept=".pdf" />
                            <small class="form-text text-muted">Only PDF files are accepted</small>
                            <span asp-validation-for="Script" class="text-danger"></span>
                        </div>

                        <!-- New Checkbox for DispenseUponApproval -->
                        <div class="form-group mb-3 form-check">
                            <input asp-for="DispenseUponApproval" class="form-check-input" type="checkbox" />
                            <label asp-for="DispenseUponApproval" class="form-check-label">Dispense Upon Approval</label>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">
                                @(Model.PrescriptionID == 0 ? "Create" : "Update")
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@model IEnumerable<Pharmacist>

@{
    ViewData["Title"] = "Manage Pharmacists";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<div class="container mt-4">
    <div class="card p-3">
        <h5 class="title-underline mb-3">Existing Pharmacists</h5>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <table class="table table-hover table-borderless">
                    <thead class="table-light" style="color: #2c3e50;">
                        <tr>
                            <th>Name</th>
                            <th>ID Number</th>
                            <th>Phone</th>
                            <th>Email</th>
                            <th>HCR No.</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ApplicationUser?.Name</td>
                                <td>@item.ApplicationUser?.IDNumber</td>
                                <td>@item.ApplicationUser?.PhoneNumber</td>
                                <td>@item.ApplicationUser?.Email</td>
                                <td>@item.HealthCouncilRegNo</td>
                                <td>
                                    <a asp-action="EditPharmacist" asp-route-id="@item.PharmacistID" class="btn btn-sm btn-warning me-2">Edit</a>
                                    <a asp-action="DeletePharmacist" asp-route-id="@item.PharmacistID" class="btn btn-sm btn-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted">No pharmacists registered yet.</p>
            }
        </div>
        <div class="mt-3">
            <a asp-action="AddPharmacists" class="btn btn-primary">Add New Pharmacist</a>
        </div>
    </div>
</div>
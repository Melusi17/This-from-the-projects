@model IEnumerable<IbhayiPharmacy.Models.Active_Ingredient>

@{
    ViewData["Title"] = "Active Ingredients";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<div class="container mt-4">
    <div class="card p-3">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="title-underline">Existing Ingredients</h5>
            <a asp-action="AddActiveIngredients" class="btn btn-sm btn-success">+ Add New Ingredient</a>
        </div>

        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <table class="table table-hover table-borderless">
                    <thead class="table-light" style="color: #2c3e50;">
                        <tr>
                            <th>Ingredient Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>
                                    <a asp-action="EditActiveIngredient" asp-route-id="@item.Active_IngredientID" class="btn btn-sm btn-warning me-2">Edit</a>
                                    <a asp-action="DeleteActiveIngredient" asp-route-id="@item.Active_IngredientID" class="btn btn-sm btn-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted">No active ingredients found.</p>
            }
        </div>
    </div>
</div>

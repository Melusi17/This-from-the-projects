@model List<ApplicationUser>
<br />
<div class="card shadow border-0 mt-4">
    <div class="card shadow border-0 mt-4">
        <div class="card-header w-100" style="cursor:pointer; background-color: #00aaff; bg-gradient; ml-0; py-3;">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2 pb-4">User List</h2>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="col-12 text-end ">
        <a class="btn border-3" style="background-color: #00aaff; color: white;" asp-area="Identity" asp-page="/Account/Register">
            <i class="bi bi-plus-circle"></i> Add User
        </a>
    </div>
    <div class="card-body p-4">
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped">
                <tr class="table-secondary">
                    <th>
                        Name
                    </th>
                    <th>
                        Surname
                    </th>
                    
                    <th>
                        Email
                    </th>
                    <th>
                        Role
                    </th>
                    <th>
                        Claims
                    </th>
                    <th>Action</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <th>
                            @item.Name
                        </th>
                        <th>
                            @item.Surname
                        </th>
                        
                        <th>
                            @item.Email
                        </th>
                       
                      
                        <th>
                            @item.Role
                        </th>
                        <th>
                            @item.UserClaim
                        </th>
                        <td style="width:450px">
                            <div class="row">
                                <div class="col-3">
                                    <a asp-action="ManagerRole" asp-route-userId="@item.Id" class="btn btn-primary w-100" style="cursor:pointer">
                                        Roles
                                    </a>
                                </div>
                                <div class="col-3">
                                    <a asp-action="ManagerUserClaim" asp-route-userId="@item.Id" class="btn btn-info w-100" style="cursor:pointer">
                                        Claims
                                    </a>
                                </div>
                                <div class="col-3">
                                    @if (item.LockoutEnd == null || item.LockoutEnd < DateTime.Now)
                                    {
                                        <form asp-action="LockUnlock" asp-route-userId="@item.Id">
                                            <input type="submit" class="btn btn-success w-100" style="cursor:pointer" value="Lock" />
                                        </form>
                                    }
                                    else
                                    {
                                        <form asp-action="LockUnlock" asp-route-userId="@item.Id">
                                            <input type="submit" class="btn btn-warning w-100" style="cursor:pointer" value="UnLock" />
                                        </form>
                                    }
                                </div>

                            </div>
                        </td>
                    </tr>
                }
            </table>
        }
    </div>
</div>





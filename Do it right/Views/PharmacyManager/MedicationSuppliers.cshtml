

@{
    ViewData["Title"] = "Medication Suppliers";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">Medication Suppliers</h2>

    <!-- Add New Supplier Form -->
    <div class="card mb-4">
        <div class="card-header">Add New Supplier</div>
        <div class="card-body">
            <form>
                <div class="mb-3">
                    <label for="supplierName" class="form-label">Supplier Name</label>
                    <input type="text" class="form-control" id="supplierName" placeholder="e.g. MedLife Distributors">
                </div>
                <div class="mb-3">
                    <label for="contactPerson" class="form-label">Contact Person</label>
                    <input type="text" class="form-control" id="contactPerson" placeholder="e.g. Jane Doe">
                </div>
                <div class="mb-3">
                    <label for="contactEmail" class="form-label">Contact Email</label>
                    <input type="email" class="form-control" id="contactEmail" placeholder="e.g. jane.doe@medlife.co.za">
                </div>
                <button type="submit" class="btn btn-primary">Add Supplier</button>
            </form>
        </div>
    </div>

    <!-- Existing Suppliers Table -->
    <div class="card">
        <div class="card-header">Existing Suppliers</div>
        <div class="card-body">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Supplier Name</th>
                        <th>Contact Person</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>

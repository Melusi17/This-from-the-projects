<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ibhayi Pharmacy</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/Pharmacist/loadPrescription.css" />
    <link rel="stylesheet" href="~/css/Pharmacist/layout.css" />
    @RenderSection("Styles", required: false)
</head>
<body>
   
    <!-- SIDEBAR -->
    <div class="sidebar">
        <div class="sidebar-header">
            <img style="height:160px;width:220px;" src="~/css/img/ibhayi2.png" />
        </div>

        <nav class="sidebar-nav">
            <a asp-controller="Pharmacy" asp-action="Index"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
            <a asp-controller="Pharmacy" asp-action="loadPrescription"><i class="fas fa-tachometer-alt"></i> Walk-In Prescription</a>
            <a asp-controller="Pharmacy" asp-action="NewDispensary"><i class="fas fa-clipboard-list"></i> Dispensary</a>
            <a asp-controller="Pharmacy" asp-action="UnprocessedScripts"><i class="fas fa-file-prescription"></i> Ordered Unprocessed Scripts</a>
            <a asp-controller="Pharmacy" asp-action="processedOrders"><i class="fas fa-boxes"></i> Processed Orders</a>
            <a asp-controller="Home" asp-action="Index"><i class="fas fa-sign-out-alt"></i> Logout</a>
        </nav>

        <div class="sidebar-footer">
            <p>Ibhayi Pharmacy v2.1</p>
        </div>
    </div>

    <!-- TOPBAR -->
    <div class="topbar">
        <span>@ViewData["Title"]</span>
        <div>Welcome, <strong>Name</strong></div>
    </div>

    <!-- MAIN CONTENT -->
    <div class="main-content">
        @RenderBody()
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>